<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proba.Controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Introduce el nombre del anime" />
   <TextField fx:id="text1" />
    <Button onAction="#onHelloButtonClick" prefHeight="26.0" prefWidth="34.0" text="Ok" />
   <TableView fx:id="table1" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="c1" prefWidth="75.0" text="Título" />
       <TableColumn fx:id="c2" prefWidth="75.0" text="Puntuación" />
         <TableColumn fx:id="c3" prefWidth="147.0" text="Ranking popularidad" />
     </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>
   <Label text="Introduce el nombre del archivo que queires crear" />
   <TextField fx:id="text2" />
   <Pane prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="btnJson" layoutX="100.0" mnemonicParsing="false" onAction="#onBtnJsonClick" text="JSON" />
         <Button fx:id="onBtnXmlClick" layoutX="200.0" mnemonicParsing="false" text="XML" />
         <Button fx:id="btnBinario" layoutX="300.0" mnemonicParsing="false" onAction="#onBtnBinarioClick" text="Binario" />
         <Button fx:id="btnTexto" layoutX="400.0" mnemonicParsing="false" onAction="#onBtnTextoClick" text="Texto" />
      </children>
   </Pane>
</VBox>
